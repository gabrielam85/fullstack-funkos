<main class="create-container container">
  <h1 class="create-title">CREAR NUEVO ITEM</h1>
  <% if (typeof errors != 'undefined') { %>
    <ul class="list-errors">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
  <form
    id="createProductForm"
    class="create-form"
    action=""
    method="post"
    enctype="multipart/form-data"
  >
    <section class="create-characteristic">
      <div class="create-item">
        <label class="create-label" for="tipo">Tipo de producto:</label>
        <select name="tipo" id="tipo">
          <option value="">Seleccionar</option>
          <option value="figuras">Figuras</option>
          <option value="llaveros">Llaveros</option>
          <option value="calcomanias">Calcomanías</option>
        </select>
      </div>
      <div class="create-item">
        <label class="create-label" for="CategoryId">Categoría:</label>
        <select name="CategoryId" id="CategoryId" required>
            <option value="">Seleccionar</option>
            <% categories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.nombre %></option>
            <% }) %>
          </select>
        </div>
      </div>
    </section>
    <section class="create-item">
      <label class="create-label" for="nombre">Nombre del producto:</label>
      <input
        class="create-text"
        type="text"
        name="nombre"
        id="nombre"
        value="<%= typeof values != 'undefined' ? values.nombre : '' %>"
        required
        placeholder="Harry Potter & Hegwid"
        minlength="3"
      />
    </section>
    <section class="create-description">
      <textarea
        name="descripcion"
        id="descripcion"
        rows="10"
        placeholder="Descripción del producto"
      ></textarea>
    </section>
    <section class="create-characteristic">
      <div class="create-item">
        <label class="create-label" for="codigo">Código:</label>
        <input
          class="create-text"
          type="text"
          name="codigo"
          id="codigo"
          placeholder="HPT001001"
          required
        />
      </div>
      <div class="create-item">
        <label class="create-label" for="precio">Precio $:</label>
        <input
          class="create-text"
          type="number"
          name="precio"
          id="precio"
          value="<%= typeof values != 'undefined' ? values.precio : '' %>"
          required
          minlength="1"
          placeholder="$ 0.000,00"
        />
      </div>
      <div class="create-item">
        <label class="create-label" for="stock">Stock:</label>
        <input
          class="create-text"
          type="text"
          name="stock"
          id="stock"
          placeholder="0"
        />
      </div>
    </section>
    <section class="create-characteristic">
      <div class="create-item">
        <label class="create-label" for="descuento">Descuento %:</label>
        <input
          class="create-text"
          type="number"
          name="descuento"
          id="descuento"
          placeholder="0%"
          value="0"
          min="0"
          max="100"
        />
      </div>
      <div class="create-item">
        <label class="create-label" for="cuotas">Cuotas:</label>
        <select name="cuotas" id="cuotas">
          <option value="">Seleccionar</option>
          <option value="3">3 cuotas sin interés</option>
          <option value="6">6 cuotas sin interés</option>
          <option value="12">12 cuotas sin interés</option>
        </select>
      </div>
    </section>
    <section class="create-item">
      <label class="create-label" for="imagenFront">Imagen Frente:</label>
      <input
        type="file"
        id="imagenFront"
        name="imagenFront"
        accept="image/webp"
      />
      <label class="create-label" for="imagenBack">Imagen Dorso:</label>
      <input
        type="file"
        id="imagenBack"
        name="imagenBack"
        accept="image/webp"
      />
    </section>
    <section class="create-actions">
      <input class="create-link" type="submit" value="Agregar Producto" />
      <input class="create-link" type="button" value="Limpiar" onclick="resetForm()" />
    </section>
  </form>
</main>
<script>
  function resetForm() {
    var form = document.getElementById("createProductForm");
  
    form.reset();
  }
  </script>
<%- contentFor('title') %> Creación Producto - Funkoshop
