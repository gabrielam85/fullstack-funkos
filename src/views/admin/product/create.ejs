<main class="create-container container">
  <h1 class="create-title">CREAR NUEVO ITEM</h1>
  <form
    class="create-form"
    action=""
    method="post"
    enctype="multipart/form-data"
  >
    <section class="create-characteristic">
      <div class="create-item">
        <label class="create-label" for="categoria">Categoría</label>
        <select name="categoria" id="categoria">
          <option value="">Seleccionar</option>
          <option value="harryPotter">Harry Potter</option>
          <option value="pokemon">Pokemon</option>
          <option value="starWars">Star Wars</option>
        </select>
      </div>
      <div class="create-item">
        <label class="create-label" for="licencia">Licencia</label>
        <select name="licencia" id="licencia">
          <option value="">Seleccionar</option>
          <option value="harryPotter">Harry Potter</option>
          <option value="pokemon">Pokemon</option>
          <option value="starWars">Star Wars</option>
        </select>
      </div>
    </section>
    <section class="create-item">
      <label class="create-label" for="nombre">Nombre del producto:</label>
      <input
        class="create-text"
        type="text"
        name="nombre"
        id="nombre"
        value="<%= typeof values != 'undefined' ? values.nombre : '' %>"
        required
        placeholder="Harry Potter & Hegwid"
        minlength="3"
      />
    </section>
    <section class="create-description">
      <textarea
        name="descripcion"
        id="descripcion"
        rows="10"
        placeholder="Descripción del producto"
      ></textarea>
    </section>
    <section class="create-characteristic">
      <div class="create-item">
        <label class="create-label" for="sku">SKU:</label>
        <input
          class="create-text"
          type="text"
          name="sku"
          id="sku"
          placeholder="HPT001001"
          required
        />
      </div>
      <div class="create-item">
        <label class="create-label" for="precio">Precio:</label>
        <input
          class="create-text"
          type="number"
          name="precio"
          id="precio"
          value="<%= typeof values != 'undefined' ? values.precio : '' %>"
          required
          minlength="1"
          placeholder="$ 0.000,00"
        />
      </div>
      <div class="create-item">
        <label class="create-label" for="stock">Stock:</label>
        <input
          class="create-text"
          type="text"
          name="stock"
          id="stock"
          placeholder="0"
          required
        />
      </div>
    </section>
    <section class="create-characteristic">
      <div class="create-item">
        <label class="create-label" for="descuento">Descuento:</label>
        <input
          class="create-text"
          type="text"
          name="descuento"
          id="descuento"
          placeholder="0%"
          required
        />
      </div>
      <div class="create-item">
        <label class="create-label" for="cuotas">Cuotas:</label>
        <select name="cuotas" id="cuotas">
          <option value="">Seleccionar</option>
          <option value="3">3 cuotas sin interés</option>
          <option value="6">6 cuotas sin interés</option>
          <option value="12">12 cuotas sin interés</option>
        </select>
      </div>
    </section>
    <section class="create-item">
      <label class="create-label" for="imagenes">Imágenes:</label>
      <input
        type="file"
        id="imagenes"
        name="imagenes[]"
        required
        multiple
        accept="image/*"
      />
    </section>
    <section class="create-actions">
      <input class="create-link" type="submit" value="Agregar Producto" />
      <input class="create-link" type="reset" value="Limpiar" />
    </section>
  </form>
</main>
<%- contentFor('title') %> Creación Producto - Funkoshop
