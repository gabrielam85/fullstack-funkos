<main class="create-container container category-container">
  <h1 class="create-title">CREAR NUEVA CATEGORÍA</h1>
  <% if (typeof errors != 'undefined') { %>
  <ul class="list-errors">
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <form
    id="createCategoryForm"
    class="create-form"
    action="/category/create"
    method="post"
  >
    <section class="create-item">
      <label class="create-label" for="nombre">Nombre de la categoría:</label>
      <input
        class="create-text"
        type="text"
        name="nombre"
        id="nombre"
        value="<%= typeof values != 'undefined' ? values.nombre : '' %>"
        required
        placeholder="STAR WARS"
        minlength="3"
      />
    </section>
    <section class="create-actions">
      <input class="create-link" type="submit" value="Agregar Categoría" />
      <input
        class="create-link"
        type="button"
        value="Limpiar"
        onclick="resetForm()"
      />
    </section>
  </form>
</main>
<script>
  function resetForm() {
    var form = document.getElementById("createCategoryForm");

    form.reset();
  }
</script>
<%- contentFor('title') %> Creación Categoría - Funkoshop
