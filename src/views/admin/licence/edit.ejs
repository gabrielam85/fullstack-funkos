<main class="create-container container category-container">
  <h1 class="create-title">EDITAR LICENCIA</h1>
  <% if (typeof errors != 'undefined') { %>
  <ul class="list-errors">
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  <form
    class="edit-form"
    action="/licence/edit/<%= values.id%>?_method=PUT"
    method="post"
  >
    <section class="create-item">
      <label class="create-label" for="nombre">Nombre de la licencia:</label>
      <input
        class="create-text"
        type="text"
        name="nombre"
        id="nombre"
        required
        placeholder="Star Wars"
        value="<%= typeof values != 'undefined' ? values.nombre : '' %>"
        minlength="3"
      />
    </section>
    <section class="create-actions">
      <input class="create-link" type="submit" value="Modificar Licencia" />
    </section>
  </form>
</main>
<script>
  const form = document.querySelector("form");

  form.addEventListener("submit", (event) => {
    const btn = document.querySelector('button[type="submit"]');
    btn.setAttribute("disabled", true);
  });
</script>
